<div class="panel panel-default band-panel">
  <div class="panel-body">
    <div class="clearfix">
      <h4 class="panel-title band-description-header pull-left">Description</h4>
      <button class="btn btn-primary pull-right" {{action "editDescription"}}>{{editSaveButtonState}}</button>
    </div>
    <div class="clearfix">
      {{#if isEditing}}
        <div class="form-group">
          {{textarea class="form-control" value=model.description}}
        </div>
      {{/if}}

      {{#unless isEditing}}
        {{#unless descriptionMessage}}
          <p>No description yet, click Edit to add one!</p>
        {{else}}
          <p>{{model.description}}</p>
        {{/unless}}
      {{/unless}}
    </div>
  </div>
</div>
{{!outlet}}